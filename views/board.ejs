<!DOCTYPE html>
<html lang="en-US">
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/styles/board.css" type="text/css">
    <script type="text/javascript" src="https://code.jquery.com/jquery-2.2.0.min.js"></script>
    <script type="text/javascript" src="/js/board.js"></script>
    <title><%=data.name%> Board</title>
  </head>
  <body>
    <header>
      <h1>Community Board</h1>
      <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </header>
    <main>
      <h1><%=data.name%></h1>
      <p><%=data.date%></p>
      <p><%=data.members.length%> Neighbors </p>
      <div id="comments">
        <%for(var i = 0; i < data.comments.length; i++){%>
            <div class="comment">
              <% if(data.comments[i].from_id !== user.id){%>
              <a href="/users/<%=data.comments[i].from_id%>"><img src="<%=data.comments[i].from_pic%>"/></a>
              <div class="comment-container">
                <p><em><%=data.comments[i].from_name%></em></p>
                <p><%=data.comments[i].value%></p>
              </div>
            </div>
            <% } else{%>
              <div class="comment-container" >
                <p><em><%=data.comments[i].from_name%></em></p>
                <p><%=data.comments[i].value%></p>
              </div>
              <a href="/users/<%=data.comments[i].from_id%>"><img src="<%=data.comments[i].from_pic%>"/></a>
            </div>

          <%}%>
        <%}%>
      </div>
      <form action="/comment" method="post">
        <input type="text" name="value" placeholder="Comment">
        <input type="hidden" name="parent" value="<%=data.id%>">
        <input type="hidden" name="from_id" value="<%=user.id%>">
        <input type="hidden" name="from_name" value="<%=user.firstName%>">
        <input type="hidden" name="from_pic" value="<%=user.pic%>">
        <input type="submit" value="Enter">
      </form>
    </main>

<a href="/users/<%=user.id%>">Profile</a>
  </body>
</html>
